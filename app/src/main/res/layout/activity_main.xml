<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end|bottom"
        android:text="0"
        android:textAlignment="gravity"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inverse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="1/x"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/square"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x^2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cube"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x^3"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/fact"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x!"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/AC"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="AC"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/sign"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="+/-" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="C"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b_div"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/root"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="√"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/root_"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x√y"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/power_10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="10^x"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x^y"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="7"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="9"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b_mul"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sin_inverse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="sin-1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cos_inverse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="cos-1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tan_inverse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="tan-1"
            android:textAllCaps="false" />





        <Button
            android:id="@+id/log"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="log"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="4"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="5"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="6"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b_subtract"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="-"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="sin"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cos"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="cos"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tan"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="tan"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ln"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="ln"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="3"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="+"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sinh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="sinh"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cosh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="cosh"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tanh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="tanh"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/power_e"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="e^x"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="."
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="0"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b_percent"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="%"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/b_equal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="="
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>